<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="quizAnswBtnStyle">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/quiz_answr_btn</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="quizConfirmBtnStyle">
        <item name="android:background">@drawable/quiz_confirm_btn</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="quizNewQuizBtnStyle">
        <item name="android:background">@drawable/quiz_new_quiz_btn</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
